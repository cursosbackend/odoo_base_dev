<odoo>
    <record id="view_curso_form" model="ir.ui.view">
        <field name="name">gestion.curso.form</field>
        <field name="model">gestion.curso</field>
        <field name="arch" type="xml">
            <form string="Curso">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="fecha_inicio"/>
                        <field name="fecha_fin"/>
                        <field name="activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_curso_tree" model="ir.ui.view">
        <field name="name">gestion.curso.tree</field>
        <field name="model">gestion.curso</field>
        <field name="arch" type="xml">
            <tree string="Cursos">
                <field name="name"/>
                <field name="fecha_inicio"/>
                <field name="fecha_fin"/>
                <field name="activo"/>
            </tree>
        </field>
    </record>

    <record id="action_curso" model="ir.actions.act_window">
        <field name="name">Cursos</field>
        <field name="res_model">gestion.curso</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_gestion_cursos_root" name="GestiÃ³n de Cursos"/>
    <menuitem id="menu_cursos" name="Cursos" parent="menu_gestion_cursos_root" action="action_curso"/>
</odoo>
